{
  "name": "salesforce-app",
  "private": true,
  "version": "1.0.0",
  "description": "Salesforce App",
  "scripts": {
    "lint": "npm run lint:lwc",
    "lint:lwc": "eslint force-app/main/default/lwc",
    "lwc:lds:start": "sfdx force:lightning:lwc:start",
    "lwc:lds:stop": "sfdx force:lightning:lwc:stop",
    "lwc:lds:open": "sfdx force:lightning:lwc:open",
    "package:create": "sfdx force:package:create --name \"Content Image URL viewer\" --path force-app --packagetype Managed",
    "package:version": "sfdx force:package:version:create --package \"Content Image URL viewer\" --installationkeybypass --wait 10 -c",
    "package:install": "sfdx force:package:install --package 04t2x000003ijU3AAI --targetusername USERNAME --wait 10 --publishwait 10",
    "package:status": "sfdx force:package:version:create:report",
    "test": "npm run test:unit",
    "test:unit": "sfdx-lwc-jest",
    "test:unit:watch": "sfdx-lwc-jest --watch",
    "test:unit:debug": "sfdx-lwc-jest --debug",
    "test:unit:coverage": "sfdx-lwc-jest --coverage",
    "prettier": "prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:verify": "prettier --list-different \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\""
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^0.7.2",
    "@salesforce/eslint-config-lwc": "^0.5.0",
    "@salesforce/sfdx-lwc-jest": "^0.7.1",
    "eslint": "^6.8.0",
    "prettier": "^2.0.5",
    "prettier-plugin-apex": "^1.4.0"
  }
}
